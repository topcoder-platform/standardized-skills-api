{
  "compilerOptions": {
    "lib": [
      "es2022"
    ],
    "module": "nodenext",
    "target": "es2022",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node16",
    "allowJs": true,
    "checkJs": false,
    "outDir": "dist",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictPropertyInitialization": false,
    "baseUrl": "./src",
    "resolveJsonModule": true,
    "skipLibCheck": true
  },
  "include": [
    "src",
    "src/global.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
