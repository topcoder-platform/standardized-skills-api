{
  "name": "standardized-skills-api",
  "version": "1.0.0",
  "packageManager": "pnpm@9.6.0",
  "main": "dist/main.js",
  "description": "API endpoints for accessing the new standardized skills across Topcoder",
  "engines": {
    "node": ">=22.0.0"
  },
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "start": "node dist/main.js",
    "start:dev": "ts-node-dev --respawn --transpile-only src/main.ts",
    "lint": "eslint -c .eslintrc 'src/**/*.ts'",
    "format": "eslint -c .eslintrc 'src/**/*.ts' --fix",
    "pretty": "prettier --write \"src/**/*.ts\"",
    "services:up": "cd ./local && docker-compose up -d",
    "db:sync": "ts-node src/scripts/sync-db.ts",
    "db:seed": "pnpm exec sequelize-cli db:seed:all",
    "db:init": "pnpm run db:sync && pnpm run db:seed",
    "prisma:generate": "pnpm exec prisma generate",
    "prisma:migrate:deploy": "pnpm exec prisma migrate deploy",
    "prisma:studio": "pnpm exec prisma studio"
  },
  "devDependencies": {
    "@tsconfig/node20": "^20.1.2",
    "@types/cls-hooked": "^4.3.6",
    "@types/express": "^4.17.21",
    "@types/lodash": "^4.14.199",
    "@types/node": "^20.14.9",
    "@types/sequelize": "^4.28.18",
    "@types/superagent": "^4.1.20",
    "@typescript-eslint/eslint-plugin": "^5.12.1",
    "@typescript-eslint/parser": "^5.12.1",
    "eslint": "^8.10.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.28.1",
    "prettier": "^2.5.1",
    "sequelize-cli": "^6.6.2",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.3"
  },
  "dependencies": {
    "@nestjs/common": "^10.2.7",
    "@nestjs/config": "^3.1.1",
    "@nestjs/core": "^10.2.7",
    "@nestjs/platform-express": "^10.2.7",
    "@prisma/client": "^6.3.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "cls-hooked": "^4.2.2",
    "dotenv": "^16.0.0",
    "http-status-codes": "^2.2.0",
    "lodash": "^4.17.21",
    "pg": "^8.7.3",
    "prisma": "^6.3.1",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1",
    "sequelize": "^6.37.1",
    "superagent": "^8.1.2",
    "tc-core-library-js": "github:appirio-tech/tc-core-library-js#v3.0.1",
    "winston": "^3.7.2"
  }
}
