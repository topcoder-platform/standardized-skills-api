{
  "name": "standardized-skills-api",
  "version": "1.0.0",
  "main": "index.js",
  "description": "API endpoints for accessing the new standardized skills across Topcoder",
  "scripts": {
    "transpile": "tsc",
    "lint": "eslint -c .eslintrc 'src/**/*.ts'",
    "format": "eslint -c .eslintrc 'src/**/*.ts' --fix",
    "pretty": "prettier --write \"src/**/*.ts\"",
    "es-init": "node dist/scripts/init-es.js",
    "es-init-force": "node dist/scripts/init-es.js force",
    "load-data-es": "node dist/scripts/load-data-es.js",
    "dev": "ts-node-dev --respawn src/index.ts",
    "services:up": "cd ./local && docker-compose up -d",
    "db:sync": "ts-node src/scripts/sync-db.ts",
    "db:seed": "npx sequelize-cli db:seed:all",
    "db:init": "npm run db:sync && npm run db:seed"
  },
  "devDependencies": {
    "@tsconfig/node16": "^16.1.1",
    "@types/body-parser": "^1.19.2",
    "@types/cls-hooked": "^4.3.6",
    "@types/cors": "^2.8.12",
    "@types/elasticsearch": "^5.0.41",
    "@types/express": "^4.17.13",
    "@types/jsonfile": "^6.1.0",
    "@types/lodash": "^4.14.199",
    "@types/morgan": "^1.9.3",
    "@types/multer": "^1.4.7",
    "@types/node": "^17.0.21",
    "@types/sequelize": "^4.28.13",
    "@types/swagger-ui-express": "^4.1.3",
    "@typescript-eslint/eslint-plugin": "^5.12.1",
    "@typescript-eslint/parser": "^5.12.1",
    "eslint": "^8.10.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.28.1",
    "prettier": "^2.5.1",
    "sequelize-cli": "^6.6.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.7.4"
  },
  "dependencies": {
    "class-transformer": "^0.5.1",
    "class-validator": "^0.13.2",
    "cls-hooked": "^4.2.2",
    "cors": "^2.8.5",
    "dayjs": "^1.11.10",
    "dotenv": "^16.0.0",
    "elasticsearch6": "npm:@elastic/elasticsearch@^6.8.8",
    "elasticsearch7": "npm:@elastic/elasticsearch@7.9.1",
    "express": "^4.17.3",
    "http-status-codes": "^2.2.0",
    "jsonfile": "^6.1.0",
    "lodash": "^4.17.21",
    "morgan": "^1.10.0",
    "pg": "^8.7.3",
    "reflect-metadata": "^0.1.13",
    "sequelize": "^6.19.0",
    "sequelize-typescript": "^2.1.3",
    "tc-core-library-js": "github:appirio-tech/tc-core-library-js#v2.6.8",
    "ts-node": "^10.9.1",
    "typedi": "^0.10.0",
    "winston": "^3.7.2"
  }
}
