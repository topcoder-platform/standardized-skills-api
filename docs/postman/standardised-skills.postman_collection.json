{
	"info": {
		"_postman_id": "182a9402-f876-44a7-bd2a-e15872fa8aa9",
		"name": "standardised-skills",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
		"_exporter_id": "30186453"
	},
	"item": [
		{
			"name": "Prerequisites",
			"item": [
				{
					"name": "Pre request instructions",
					"event": [
						{
							"listen": "prerequest",
							"script": {
								"exec": [
									"\"1. First need to update the Postman environment with valid values of `client_id` and `client_secret`\",",
									"\"2. Run the `dev- generate token` test under `Auth Token` folder to properly generate the token\""
								],
								"type": "text/javascript"
							}
						}
					],
					"protocolProfileBehavior": {
						"disableBodyPruning": true
					},
					"request": {
						"method": "GET",
						"header": [],
						"body": {
							"mode": "raw",
							"raw": ""
						}
					},
					"response": []
				}
			]
		},
		{
			"name": "Auth Token",
			"item": [
				{
					"name": "dev- generate token",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"pm.environment.set(\"token\", pm.response.json().access_token);"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"grant_type\": \"client_credentials\",\n    \"client_id\": \"{{client_id}}\",\n    \"client_secret\": \"{{client_secret}}\",\n    \"audience\": \"https://m2m.topcoder-dev.com/\",\n    \"auth0_url\": \"https://topcoder-dev.auth0.com/oauth/token\"\n}",
							"options": {
								"raw": {
									"language": "json"
								}
							}
						},
						"url": {
							"raw": "https://auth0proxy.topcoder-dev.com/token",
							"protocol": "https",
							"host": [
								"auth0proxy",
								"topcoder-dev",
								"com"
							],
							"path": [
								"token"
							]
						}
					},
					"response": []
				}
			]
		},
		{
			"name": "all skills",
			"request": {
				"auth": {
					"type": "bearer",
					"bearer": [
						{
							"key": "token",
							"value": "{{token}}",
							"type": "string"
						}
					]
				},
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{base_url}}/skills?page=1&perPage=25&sortBy=name&sortOrder=DESC",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"skills"
					],
					"query": [
						{
							"key": "page",
							"value": "1"
						},
						{
							"key": "perPage",
							"value": "25"
						},
						{
							"key": "sortBy",
							"value": "name"
						},
						{
							"key": "sortOrder",
							"value": "DESC"
						}
					]
				}
			},
			"response": []
		},
		{
			"name": "autocomplete skills suggestion",
			"request": {
				"auth": {
					"type": "bearer",
					"bearer": [
						{
							"key": "token",
							"value": "{{token}}",
							"type": "string"
						}
					]
				},
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{base_url}}/skills/autocomplete?term=jav&size=30",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"skills",
						"autocomplete"
					],
					"query": [
						{
							"key": "term",
							"value": "jav"
						},
						{
							"key": "size",
							"value": "30"
						}
					]
				}
			},
			"response": []
		},
		{
			"name": "health check",
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{base_url}}/health",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"health"
					]
				}
			},
			"response": []
		}
	],
	"variable": [
		{
			"key": "token",
			"value": ""
		}
	]
}